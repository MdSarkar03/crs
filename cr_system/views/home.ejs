<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRS Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 dark:bg-gray-900 flex flex-col min-h-screen">

    <nav class="bg-gray-800 text-white py-4">
        <div class="container mx-auto flex justify-between items-center px-4">
            <%- include('partials/header') %>
        </div>
    </nav>
    <hr class="border-black">

    <h1 class=" text-xl font-extrabold leading-none tracking-tight text-gray-900 md:text-3xl lg:text-4xl dark:text-white">
        <span id="greetings" class="tracking-wide text-transparent bg-clip-text bg-gradient-to-r from-red-600 to-blue-500"></span>
    </h1>

    <main class="flex-grow flex flex-col items-center justify-center text-center">
        <h1 class="mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white">
            Welcome to <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-blue-500">CIEM</span> <br> Campus Recruitment System
        </h1>

        <button 
            data-modal-target="select-modal" 
            data-modal-toggle="select-modal" 
            class="block inline-flex items-center justify-center p-4 mb-4 me-2 overflow-hidden text-lg font-bold text-white rounded-lg group bg-gradient-to-r from-purple-600 to-blue-500 group-hover:from-purple-700 group-hover:to-blue-600 shadow-lg transform hover:scale-105 transition-transform duration-300 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800" 
            type="button">
            Let's Get Started! &rarr;
        </button>

        <div id="select-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
            <div class="relative p-4 w-full max-w-md max-h-full">
                
                <div class="relative bg-white rounded-lg shadow dark:bg-gray-800">
                  
                    <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-800">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                            Your are
                        </h3>
                        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm h-8 w-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-toggle="select-modal">
                            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                            </svg>
                            <span class="sr-only">Close modal</span>
                        </button>
                    </div>
                   
                    <div class="p-4 md:p-5">
                        <ul class="space-y-4 mb-4">
                            <li>
                                <a 
                                    href="/admin/signin" 
                                    class="inline-flex items-center justify-between w-full p-5 text-gray-900 bg-white border border-gray-200 rounded-lg cursor-pointer hover:text-gray-900 hover:bg-gray-100 dark:text-white dark:bg-gray-700 dark:border-gray-500 dark:hover:text-gray-300 dark:hover:bg-gray-500">
                                    <div class="block">
                                        <div class="w-full text-lg font-semibold">Admin</div>
                                    </div>
                                    <svg 
                                        class="w-4 h-4 ms-3 rtl:rotate-180 text-gray-500 dark:text-gray-400" 
                                        aria-hidden="true" 
                                        xmlns="http://www.w3.org/2000/svg" 
                                        fill="none" 
                                        viewBox="0 0 14 10">
                                        <path 
                                            stroke="currentColor" 
                                            stroke-linecap="round" 
                                            stroke-linejoin="round" 
                                            stroke-width="2" 
                                            d="M1 5h12m0 0L9 1m4 4L9 9" />
                                    </svg>
                                </a>
                            </li>
                            
                            <li>
                                <a 
                                    href="/company/signin" 
                                    class="inline-flex items-center justify-between w-full p-5 text-gray-900 bg-white border border-gray-200 rounded-lg cursor-pointer hover:text-gray-900 hover:bg-gray-100 dark:text-white dark:bg-gray-700 dark:border-gray-500 dark:hover:text-gray-300 dark:hover:bg-gray-500">
                                    <div class="block">
                                        <div class="w-full text-lg font-semibold">Company</div>
                                    </div>
                                    <svg 
                                        class="w-4 h-4 ms-3 rtl:rotate-180 text-gray-500 dark:text-gray-400" 
                                        aria-hidden="true" 
                                        xmlns="http://www.w3.org/2000/svg" 
                                        fill="none" 
                                        viewBox="0 0 14 10">
                                        <path 
                                            stroke="currentColor" 
                                            stroke-linecap="round" 
                                            stroke-linejoin="round" 
                                            stroke-width="2" 
                                            d="M1 5h12m0 0L9 1m4 4L9 9" />
                                    </svg>
                                </a>
                            </li>

                            <li>
                                <a 
                                    href="/student/signin" 
                                    class="inline-flex items-center justify-between w-full p-5 text-gray-900 bg-white border border-gray-200 rounded-lg cursor-pointer hover:text-gray-900 hover:bg-gray-100 dark:text-white dark:bg-gray-700 dark:border-gray-500 dark:hover:text-gray-300 dark:hover:bg-gray-500">
                                    <div class="block">
                                        <div class="w-full text-lg font-semibold">Student</div>
                                    </div>
                                    <svg 
                                        class="w-4 h-4 ms-3 rtl:rotate-180 text-gray-500 dark:text-gray-400" 
                                        aria-hidden="true" 
                                        xmlns="http://www.w3.org/2000/svg" 
                                        fill="none" 
                                        viewBox="0 0 14 10">
                                        <path 
                                            stroke="currentColor" 
                                            stroke-linecap="round" 
                                            stroke-linejoin="round" 
                                            stroke-width="2" 
                                            d="M1 5h12m0 0L9 1m4 4L9 9" />
                                    </svg>
                                </a>
                            </li>
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div> 

    </main>

    <footer class="footer text-center bg-gray-800 text-white py-4">
        <p>&copy; 2025 Campus Recruitment System. All rights reserved.</p>
        <p>Made with <span>❤️</span> by <span class="text-blue-600">Mangaldeep Sarkar</span> :)</p>
        <div class="social-media space-x-4 mt-4">

            <a href="http://www.github.com/mdsarkar03" target="_blank" class="text-blue-600 hover:text-blue-800">
                <i class="fa-brands fa-github fa-2x"></i>
            </a>
            <a href="https://discord.com/users/mds_99" target="_blank" class="text-blue-600 hover:text-blue-800">
                <i class="fa-brands fa-discord fa-2x"></i>
            </a>
            <a href="https://www.linkedin.com/in/mangaldeep-sarkar/" target="_blank" class="text-blue-600 hover:text-blue-800">
                <i class="fa-brands fa-linkedin fa-2x"></i>
            </a>
            <!-- <a href="https://t.me/mdsarkar99" target="_blank" class="text-blue-600 hover:text-blue-800">
                <i class="fa-brands fa-telegram fa-2x"></i>
            </a> -->
        </div>
    </footer>

    <script>
        const date = new Date();
        const hrs = date.getHours();
        let greet;
        if(hrs >= 5 && hrs < 12) greet = 'Good Morning!';
        else if(hrs >= 12 && hrs < 17) greet = 'Good Afternoon!';
        else if(hrs >= 17 && hrs < 20) greet = 'Good Evening!';
        else greet = 'Good Night!';
        document.getElementById('greetings').innerHTML = greet;
    </script>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
</body>
</html>
